<h1>
  <%= "Автобусы #{@from.name} – #{@to.name}" %>
</h1>
<h2>
  <%= "В расписании #{@trips.count} рейсов" %>
</h2>

<% @trips.each do |trip| %>
  <ul>
    <li><%= "Отправление: #{trip[:start_time]}" %></li>
    <li><%= "Прибытие: #{(Time.parse(trip[:start_time]) + trip[:duration_minutes].minutes).strftime('%H:%M')}" %></li>
    <li><%= "В пути: #{trip[:duration_hours]}ч. #{trip[:duration_minutes]}мин." %></li>
    <li><%= "Цена: #{trip[:price_rub]}р. #{trip[:price_cop]}коп." %></li>
    <li><%= "Автобус: #{trip[:bus].model} №#{trip[:bus].number}" %></li>

    <% if trip[:services].present? %>
      <li>Сервисы в автобусе:</li>
      <ul>
        <% trip[:services].each do |name| %>
          <li><%= "#{name}" %></li>
        <% end %>
      </ul>
    <% end %>
  </ul>
  ====================================================
<% end %>
