<h1>
  <%= "Автобусы #{@from.name} – #{@to.name}" %>
</h1>
<h2>
  <%= "В расписании #{@trips.count} рейсов" %>
</h2>

<% @trips.each do |trip| %>
  <ul>
    <%= render "trip", trip: trip %>
    <% if @buses[trip.bus_id].services.present? %>
      <li>Сервисы в автобусе:</li>
      <ul>
        <% @buses[trip.bus_id].services.each do |service| %>
          <li><%= "#{service.name}" %></li>
        <% end %>
      </ul>
    <% end %>
  </ul>
  ====================================================
<% end %>
